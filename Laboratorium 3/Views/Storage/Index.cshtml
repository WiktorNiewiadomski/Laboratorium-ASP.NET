@model List<Storage>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>List of storages</h2>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Type)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Size GB
            </td>
            <td>
                @item.Type
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Storage"
                   asp-route-id=@item.Id>Edit</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Storage"
                   asp-route-id=@item.Id>Details</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Storage"
                   asp-route-id=@item.Id>Delete</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary"
   asp-action="Create"
   asp-controller="Storage">Create storage</a>