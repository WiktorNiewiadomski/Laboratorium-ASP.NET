@model Storage
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Delete storage</h2>
            <form asp-action="Delete" asp-controller="Storage" method="POST">
                <input type="number" asp-for="Id" hidden />
                <div>
                    <label asp-for="Name">Name</label>
                    <input class="form-control" type="text" asp-for="Name" readonly/>
                </div>
                <label asp-for="Size">Size</label>
                <div class="input-group">
                    <div>
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="Size" readonly />
                    <div class="input-group-append">
                        <span class="input-group-text"> GB </span>
                    </div>
                </div>
                <div>
                    <label asp-for="Type">Core count</label>
                    <input class="form-control" type="text" asp-for="Type" readonly />
                </div>
                <button type="submit">Delete</button>
            </form>
            <form asp-action="Index" asp-controller="Storage" method="GET">
                <button type="submit">Cancel</button>
            </form>
        </div>
    </div>
</div>