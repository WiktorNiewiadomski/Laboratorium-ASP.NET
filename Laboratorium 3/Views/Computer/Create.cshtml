@model Computer
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Computer</h2>
            <form asp-action="Create" asp-controller="Computer" method="POST">
                <div asp-validation-summary="All"></div>
                <div>
                    <div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="Name"/>
                </div>
                <div>
                    <div>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
                </div>
                <div>
                    <div>
                        <span asp-validation-for="Processor" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="Processor" />
                </div>
                <div>
                    <div>
                        <span asp-validation-for="Storage" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="Storage" />
                </div>
                <div>
                    <div>
                        <span asp-validation-for="GraphicsCard" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="GraphicsCard" />
                </div>
                <div>
                    <div>
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="Manufacturer" />
                </div>
                <div>
                    <div>
                        <span asp-validation-for="DateOfManufacture" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="DateOfManufacture" />
                </div>
                <button type="submit">Save</button>
            </form>
        </div>
    </div>
</div>