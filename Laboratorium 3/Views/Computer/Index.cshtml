@model List<Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>List of computers</h2>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ComputerType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Processor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Storage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].GraphicsCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DateOfManufacture)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.ComputerType.GetDisplayName()
            </td>
            <td>
                @item.Processor.Name
            </td>
            <td>
                @item.Storage.Name
            </td>
            <td>
                @item.GraphicsCard.Name
            </td>
            <td>
                @item.Manufacturer
            </td>
            <td>
                @item.DateOfManufacture
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Computer"
                   asp-route-id=@item.Id>Edit</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Computer"
                   asp-route-id=@item.Id>Details</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Computer"
                   asp-route-id=@item.Id>Delete</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary"
   asp-action="Create"
   asp-controller="Computer">Create computer</a>