@model Dictionary<int, Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>List of computers</h2>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Processor
        </th>
        <th>
            Storage
        </th>
        <th>
            Graphics Card
        </th>
        <th>
            Manufacturer
        </th>
        <th>
            Date of manufacture
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @item.Value.Name
            </td>
            <td>
                @item.Value.Processor
            </td>
            <td>
                @item.Value.Storage
            </td>
            <td>
                @item.Value.GraphicsCard
            </td>
            <td>
                @item.Value.Manufacturer
            </td>
            <td>
                @item.Value.DateOfManufacture
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Computer"
                   asp-route-id=@item.Value.Id>Edit</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Computer"
                   asp-route-id=@item.Value.Id>Details</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Computer"
                   asp-route-id=@item.Value.Id>Delete</a>
            </td>
        </tr>
    }
</table>