@model Dictionary<int, Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>List of computers</h2>
if (@Model.Count > 0) {
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Processor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Storage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].GraphicsCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DateOfManufacture)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @item.Value.Name
            </td>
            <td>
                @item.Value.Priority.GetDisplayName()
            </td>
            <td>
                @item.Value.Processor
            </td>
            <td>
                @item.Value.Storage
            </td>
            <td>
                @item.Value.GraphicsCard
            </td>
            <td>
                @item.Value.Manufacturer
            </td>
            <td>
                @item.Value.DateOfManufacture
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Edit"
                   asp-controller="Computer"
                   asp-route-id=@item.Value.Id>Edit</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Computer"
                   asp-route-id=@item.Value.Id>Details</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Computer"
                   asp-route-id=@item.Value.Id>Delete</a>
            </td>
        </tr>
    }
</table>
}