@model Processor
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Processor details</h2>
            <form>
                <div>
                    <label asp-for="Name">Name</label>
                    <input class="form-control" type="text" asp-for="Name" readonly />
                </div>
                <div>
                    <label asp-for="CoreCount">Core count</label>
                    <input class="form-control" type="text" asp-for="CoreCount" readonly />
                </div>
                <label asp-for="CacheSize">Cache size</label>
                <div class="input-group">
                    <div>
                        <span asp-validation-for="CacheSize" class="text-danger"></span>
                    </div>
                    <input class="form-control" type="text" asp-for="CacheSize" readonly />
                    <div class="input-group-append">
                        <span class="input-group-text"> MB </span>
                    </div>
                </div>
            </form>
            <form asp-action="Index" asp-controller="Processor" method="GET">
                <button type="submit">Back to list</button>
            </form>
        </div>
    </div>
</div>